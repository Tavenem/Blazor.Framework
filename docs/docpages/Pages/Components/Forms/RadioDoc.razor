    <RadioButton Value=""2"" Label=""Two"" ThemeColor=""ThemeColor.Secondary"" />
    <RadioButton Value=""3"" Label=""Three"" />
</RadioGroup>
<RadioGroup @bind-Value=""_value2"" Class=""inline"" ThemeColor=""ThemeColor.Tertiary"">
    <RadioButton Value=""1"" Label=""One"" />
