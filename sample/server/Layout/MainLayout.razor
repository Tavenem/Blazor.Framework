@inherits LayoutComponentBase

<div class="tavenem-framework-layout">
    <SnackbarContainer @rendermode="@RenderMode.Auto" />
    <DialogContainer @rendermode="@RenderMode.Auto" />
    <TopAppbar />
    <LeftDrawer @rendermode="@RenderMode.Auto" />
    <main class="container">
        @Body
        <footer class="d-flex flex-wrap align-self-stretch mt-auto mx-6 pt-4 px-4 pb-1 gap-3 justify-content-space-around">
            <small>© Tavenem</small>
            <small><a href="https://tavenem.com/privacy">Privacy</a></small>
            <small><a href="https://tavenem.com/contact">Contact</a></small>
        </footer>
    </main>
    <Contents Breakpoint="Breakpoint.Lg" Class="d-print-none" Style="grid-area:contents" />
    <ScrollToTop Selector=".tavenem-framework-layout > .container" @rendermode="@RenderMode.Auto" />
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="#" class="reload" rel="nofollow">Reload</a>
    <a href="#" class="dismiss" rel="nofollow" onclick="document.getElementById('blazor-error-ui').style.display='none'">🗙</a>
</div>
