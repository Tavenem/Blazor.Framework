@namespace Tavenem.Blazor.Framework

@inherits TavenemComponentBase

@if (ChildContent is null)
{
    return;
}

<tf-tooltip id="@Id"
            data-anchor-origin="@AnchorOrigin"
            data-arrow="@Arrow"
            data-container-no-trigger="@(!IsContainerTrigger)"
            data-delay="@(Delay == 0 ? null : Delay)"
            data-dismiss-on-tap="@DismissOnTap"
            data-max-height="@MaxHeight"
            data-popover-class="@CssClass"
            data-popover-origin="@PopoverOrigin"
            data-popover-style="@CssStyle"
            data-tooltip-button="@IsButton">
    @ChildContent
</tf-tooltip>
