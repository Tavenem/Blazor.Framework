@namespace Tavenem.Blazor.Framework

@inherits TavenemComponentBase

<tf-popover @ref="ElementReference"
            @attributes="AdditionalAttributes"
            id="@Id"
            class="@CssClass"
            popover="@(DismissOnTapOutside ? "auto" : "manual")"
            style="@CssStyle"
            tabindex="0"
            data-anchor-id="@AnchorId"
            data-anchor-origin="@AnchorOrigin.ToCSS()"
            data-focus-id="@FocusId"
            data-offset-x="@OffsetX"
            data-offset-y="@OffsetY"
            data-open="@IsOpen"
            data-origin="@PopoverOrigin.ToCSS()"
            data-position-x="@PositionX"
            data-position-y="@PositionY">
    @ChildContent
</tf-popover>