@namespace Tavenem.Blazor.Framework

@inherits TavenemComponentBase

<div @attributes="AdditionalAttributes" class="@CssClass" style="@CssStyle" @onclick="OnClick">
    @if (AutoIcon)
    {
        <tf-icon class="@IconClass">@Icon</tf-icon>
    }
    @ChildContent
    @if (Interactive && (AutoClose || OnClosed.HasDelegate || Closed is not null))
    {
        <tf-close @onclick="OnClosedAsync" />
    }
</div>
