@namespace Tavenem.Blazor.Framework

@inherits TavenemComponentBase

<div @attributes="AdditionalAttributes" class="@CssClass" style="@CssStyle" @onclick="OnClick" data-can-close>
    @if (AutoIcon)
    {
        <tf-icon class="@IconClass">@Icon</tf-icon>
    }
    @ChildContent
    @if (OnClosed.HasDelegate || Closed is not null)
    {
        <tf-close disabled="@(!Interactive)" @onclick="OnClosedAsync" />
    }
    else if (AutoClose)
    {
        <tf-close data-close-auto />
    }
</div>
