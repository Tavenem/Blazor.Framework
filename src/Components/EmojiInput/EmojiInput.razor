@namespace Tavenem.Blazor.Framework

@inherits PickerComponentBase<string>

<tf-emoji-input @ref="ElementReference"
                @attributes="AdditionalAttributes"
                id="@Id"
                autofocus="@AutoFocus"
                class="@CssClass"
                data-show-emoji="@(!IconButton)"
                disabled="@Disabled"
                name="@NameValue"
                readonly="@ReadOnly"
                required="@Required"
                style="@CssStyle"
                tabindex="@TabIndex"
                value="@CurrentValueAsString"
                @onvaluechange="OnValueChange">
    @ChildContent
</tf-emoji-input>