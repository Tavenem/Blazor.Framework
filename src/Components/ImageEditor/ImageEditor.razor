@namespace Tavenem.Blazor.Framework

@inherits TavenemComponentBase

<tf-image-editor @attributes="AdditionalAttributes"
                 id="@Id"
                 class="@CssClass"
                 data-edit-no-image="@AllowEditNoImage"
                 data-aspect-ratio="@CropAspectRatio"
                 data-format="@Format"
                 data-hide-aspect-ratio="@(!ShowCropAspectRatioControls)"
                 data-hide-crop="@(!ShowCropControls)"
                 data-hide-drawing="@(!ShowDrawingControls)"
                 data-hide-edit="@(!ShowEditButton)"
                 data-hide-flip="@(!ShowFlipControls)"
                 data-hide-formats="@(!ShowFormats)"
                 data-hide-rotate="@(!ShowRotateControls)"
                 data-no-save="@(!AllowSaving)"
                 data-quality="@Quality"
                 src="@Src"
                 style="@CssStyle"
                 @crop="OnCropAsync"
                 @inputtoggle="OnEditChangeAsync"
                 @stream="OnSaveAsync">
    @ChildContent
</tf-image-editor>
