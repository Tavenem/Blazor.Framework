@namespace Tavenem.Blazor.Framework

@typeparam TValue

@inherits BoolInputComponentBase<TValue>

<div @attributes="AdditionalAttributes" class="@CssClass" style="@CssStyle">
    <label>
        <span class="@IconClass">
            <input @ref="ElementReference"
                   @attributes="InputAttributes"
                   id="@Id"
                   type="checkbox"
                   class="@InputCssClass"
                   style="@InputCssStyle"
                   autofocus="@AutoFocus"
                   checked="@IsChecked"
                   disabled="@IsDisabled"
                   name="@NameValue"
                   readonly="@IsReadOnly"
                   tabindex="@TabIndex"
                   @onchange="OnChange"
                   @onclick:preventDefault="IsReadOnly" />
            <tf-icon>@Icon</tf-icon>
        </span>
        @if (!string.IsNullOrEmpty(Label))
        {
            <span class="label">@Label</span>
        }
    </label>
    @if (IsInvalidAndTouched)
    {
        <div class="field-helpers">
            <ul class="mr-auto mb-0 pl-0">
                @foreach (var message in GetValidationMessages())
                {
                    <li>@message</li>
                }
            </ul>
        </div>
    }
    @ChildContent
</div>
