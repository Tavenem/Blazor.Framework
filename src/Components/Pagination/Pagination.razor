@namespace Tavenem.Blazor.Framework

@inherits PersistentComponentBase

<tf-pagination @attributes="AdditionalAttributes"
               id="@Id"
               class="@CssClass"
               data-links="@(PersistState && !IsInteractive)"
               data-max-pages="@MaxPagesDisplayed"
               data-page-count="@PageCount"
               disabled="@Disabled"
               style="@CssStyle"
               value="@CurrentPage"
               @onlastpage="OnLastAsync"
               @onnextpage="OnNextAsync"
               @onvaluechange="OnSetPageAsync">
    @ChildContent
</tf-pagination>
